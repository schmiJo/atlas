<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="-12dp"
    android:fillViewport="true"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="16dp"
    app:layout_behavior="com.atlas.atlas.main.MainSheetBehavior">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/earthModesContainer"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="78dp">


        <View
            android:id="@+id/feedButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="bottom"
            android:background="@drawable/ic_feed_cards" />

        <android.support.v4.widget.Space
            android:layout_width="110dp"
            android:layout_height="wrap_content" />



            <View
                android:id="@+id/cardButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="bottom"
                android:background="@drawable/ic_card_white_36dp" />


    </LinearLayout>





    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="64dp"
        android:id="@+id/modeContainer"/>



</android.support.v7.widget.CardView>